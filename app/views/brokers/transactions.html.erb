<section class="text-gray-600 body-font">
  <div class="container px-5 py-10 mx-auto">
    <div class="flex flex-col text-center w-full mb-5">
      <h1 class="sm:text-4xl text-3xl font-medium title-font mb-2 text-gray-900">All Transactions</h1>    
    </div>
    <div class="container px-5 py-6 mx-auto">
      <div class="w-full mx-auto overflow-auto lg:w-2/3">
        <table class="w-full text-left whitespace-no-wrap table-auto">
          <thead>
            <tr>
              <th class="px-4 py-2 text-sm font-medium tracking-widest text-gray-500 title-font bg-blue-50">Symbol</th>
              <th class="px-4 py-2 text-sm font-medium tracking-widest text-gray-500 title-font bg-blue-50">Price</th>
              <th class="px-4 py-2 text-sm font-medium tracking-widest text-gray-500 title-font bg-blue-50">Total Shares</th>
              <th class="px-4 py-2 text-sm font-medium tracking-widest text-gray-500 title-font bg-blue-50">Shares</th>
              <th class="px-4 py-2 text-sm font-medium tracking-widest text-gray-500 title-font bg-blue-50">Buyer</th>
              <th class="px-4 py-2 text-sm font-medium tracking-widest text-gray-500 title-font bg-blue-50">Broker</th>
              <th class="px-4 py-2 text-sm font-medium tracking-widest text-gray-500 title-font bg-blue-50">Transaction Date/Time</th>
            </tr>
          </thead>
          <tbody>
            <% @current_user_transactions.all.sort_by { |c| c["updated_at"] }.reverse.each do |transaction| %>
              <tr class="items-center">
                <td class="px-4 py-2 text-black bg-gray-50"><%= transaction.symbol %></td>
                <td class="px-4 py-2 text-black bg-gray-50"><%= transaction.price %></td>
                <td class="px-4 py-2 text-black bg-gray-50"><%= transaction.total_shares %></td>
                <td class="px-4 py-2 text-black bg-gray-50"><%= transaction.shares %></td>
                <td class="px-4 py-2 text-black bg-gray-50"><%= transaction.buyer %></td>
                <td class="px-4 py-2 text-black bg-gray-50"><%= transaction.broker %></td>
                <td class="px-4 py-2 text-black bg-gray-50"><%= transaction.updated_at.to_s(:long) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>


