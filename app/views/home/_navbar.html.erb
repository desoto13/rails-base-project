<div class="container items-center fixed top-0 z-10 max-w-full mw:auto">
  <div class="text-gray-700 transition duration-500 ease-in-out transform bg-white border rounded-lg ">
    <div class="flex flex-col flex-wrap p-5 mx-auto md:items-center sm:flex-row">
      <a href="/" class="pr-2 md:pr-2 lg:px-6 lg:pr-2 focus:outline-none">
        <div class="inline-flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-indigo-900" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M3 3a1 1 0 000 2v8a2 2 0 002 2h2.586l-1.293 1.293a1 1 0 101.414 1.414L10 15.414l2.293 2.293a1 1 0 001.414-1.414L12.414 15H15a2 2 0 002-2V5a1 1 0 100-2H3zm11.707 4.707a1 1 0 00-1.414-1.414L10 9.586 8.707 8.293a1 1 0 00-1.414 0l-2 2a1 1 0 101.414 1.414L8 10.414l1.293 1.293a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          <h2 class="block p-2 text-xl font-medium tracking-tighter text-black transition duration-500 ease-in-out transform cursor-pointer hover:text-gray-500 lg:text-x lg:mr-8">Stockify</h2>
        </div>
      </a>
      <% if buyer_signed_in? %>
      <span class="text-gray-600 text-1xl font-bold py-2 mr-1 my-2">CLIENT</span>
      <nav class="flex flex-wrap items-center justify-center text-base sm:mx-auto"> 
        <ul class="items-center inline-block list-none sm:inline-flex">
          <li>
            <%= link_to 'Portfolio', root_path , class:"px-4 py-1 mr-1 text-base text-gray-500 transition duration-500 ease-in-out transform rounded-md focus:shadow-outline focus:outline-none focus:ring-2 ring-offset-current ring-offset-2 hover:text-black" %>
          </li>
          <li>
            <%= link_to 'Buy Stocks', brokerlist_path, class:"px-4 py-1 mr-1 text-base text-gray-500 transition duration-500 ease-in-out transform rounded-md focus:shadow-outline focus:outline-none focus:ring-2 ring-offset-current ring-offset-2 hover:text-black" %>
          </li>
          <li>
            <%= link_to 'Transactions', buyer_transactions_path, class:"px-4 py-1 mr-1 text-base text-gray-500 transition duration-500 ease-in-out transform rounded-md focus:shadow-outline focus:outline-none focus:ring-2 ring-offset-current ring-offset-2 hover:text-black" %>
          </li>
        </ul>
      </nav>
      <%= link_to 'Log out', destroy_buyer_session_path, method: :delete, class:"w-auto px-8 py-2 my-2 text-gray-700 border-gray-700 font-medium transition duration-500 ease-in-out transform bg-white rounded-md focus:shadow-outline focus:outline-none focus:ring-2 ring-offset-current ring-offset-2 hover:bg-gray-700 hover:text-white" %>

      <% elsif broker_signed_in? %>
      <span class="text-gray-600 text-1xl font-bold py-2 mr-1 my-2">BROKER</span>
      <nav class="flex flex-wrap items-center justify-center text-base sm:mx-auto"> 
        <ul class="items-center inline-block list-none sm:inline-flex">
          <li>
            <%= link_to 'Portfolio', root_path , class:"px-4 py-1 mr-1 text-base text-gray-500 transition duration-500 ease-in-out transform rounded-md focus:shadow-outline focus:outline-none focus:ring-2 ring-offset-current ring-offset-2 hover:text-black" %>
          </li>
          <li>
            <%= link_to 'Stock List', stocklist_path, class:"px-4 py-1 mr-1 text-base text-gray-500 transition duration-500 ease-in-out transform rounded-md focus:shadow-outline focus:outline-none focus:ring-2 ring-offset-current ring-offset-2 hover:text-black" %>
          </li>
          <li>
            <%= link_to 'Transactions', broker_transactions_path, class:"px-4 py-1 mr-1 text-base text-gray-500 transition duration-500 ease-in-out transform rounded-md focus:shadow-outline focus:outline-none focus:ring-2 ring-offset-current ring-offset-2 hover:text-black" %>
          </li>
        </ul>
      </nav>

      <%= link_to 'Log out', destroy_broker_session_path, method: :delete, class:"w-auto px-8 py-2 my-2 text-gray-700 border-gray-700 font-medium transition duration-500 ease-in-out transform bg-white rounded-md focus:shadow-outline focus:outline-none focus:ring-2 ring-offset-current ring-offset-2 hover:bg-gray-700 hover:text-white" %>

      <% elsif admin_signed_in? %>
      <span class="text-gray-600 text-1xl font-bold py-2 mr-1 my-2">ADMIN</span>
      <nav class="flex flex-wrap items-center justify-center text-base sm:mx-auto"> 
        <ul class="items-center inline-block list-none sm:inline-flex">
          <li>
            <%= link_to 'Approval', admin_broker_approval_path , class:"px-4 py-1 mr-1 text-base text-gray-500 transition duration-500 ease-in-out transform rounded-md focus:shadow-outline focus:outline-none focus:ring-2 ring-offset-current ring-offset-2 hover:text-black" %>
          </li>
          <li>
            <%= link_to '+Buyer', new_buyer_path, class:"px-4 py-1 mr-1 text-base text-gray-500 transition duration-500 ease-in-out transform rounded-md focus:shadow-outline focus:outline-none focus:ring-2 ring-offset-current ring-offset-2 hover:text-black" %>
          </li>
          <li>
            <%= link_to '+Broker', new_broker_path, class:"px-4 py-1 mr-1 text-base text-gray-500 transition duration-500 ease-in-out transform rounded-md focus:shadow-outline focus:outline-none focus:ring-2 ring-offset-current ring-offset-2 hover:text-black" %>
          </li>
          <li>
            <%= link_to 'Transactions', admin_transactions_path, class:"px-4 py-1 mr-1 text-base text-gray-500 transition duration-500 ease-in-out transform rounded-md focus:shadow-outline focus:outline-none focus:ring-2 ring-offset-current ring-offset-2 hover:text-black" %>
          </li>
        </ul>
      </nav>
      <%= link_to 'Log out', destroy_admin_session_path, method: :delete, class:"w-auto px-8 py-2 my-2 text-gray-700 border-gray-700 font-medium transition duration-500 ease-in-out transform bg-white rounded-md focus:shadow-outline focus:outline-none focus:ring-2 ring-offset-current ring-offset-2 hover:bg-gray-700 hover:text-white" %>

      <% else %>
      <nav class="flex flex-wrap items-center justify-center text-base sm:mx-auto"> 
        <ul class="items-center inline-block list-none lg:inline-flex">
          <li>
            <%= link_to 'Home', root_path , class:"px-4 py-1 mr-1 text-base text-gray-500 transition duration-500 ease-in-out transform rounded-md focus:shadow-outline focus:outline-none focus:ring-2 ring-offset-current ring-offset-2 hover:text-black" %>
          </li>
          <li>
            <%= link_to 'New Investor', new_buyer_registration_path, class:"px-4 py-1 mr-1 text-base text-gray-500 transition duration-500 ease-in-out transform rounded-md focus:shadow-outline focus:outline-none focus:ring-2 ring-offset-current ring-offset-2 hover:text-black" %>
          </li>
          <li>
            <%= link_to 'New Broker', new_broker_registration_path, class:"px-4 py-1 mr-1 text-base text-gray-500 transition duration-500 ease-in-out transform rounded-md focus:shadow-outline focus:outline-none focus:ring-2 ring-offset-current ring-offset-2 hover:text-black" %>
          </li>
        </ul>
      </nav>
      <%= link_to 'Sign In', new_buyer_session_path, class:"w-auto px-8 py-2 my-2 text-base font-medium text-white transition duration-500 ease-in-out transform border-blue-600 rounded-md focus:shadow-outline focus:outline-none focus:ring-2 ring-offset-current ring-offset-2 hover:bg-blue-50 hover:shadow-2xl text-indigo-500 cursor-pointer" %>

      <% end %>
    </div>
  </div>
</div>