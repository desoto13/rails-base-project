<section class="text-gray-700 bg-gray-50">
  <div class="container flex flex-col items-center px-5 py-16 mx-auto md:flex-row lg:px-28">
    <div class="flex flex-col w-full pt-0 mb-16 text-left lg:flex-grow md:w-1/2 xl:mr-16 md:pr-16 md:items-start md:mb-0 ">
              <h2 class="mb-8 text-xs font-semibold tracking-widest text-black uppercase title-font">STOCKIFY for your Stock Options</h2>
              <h1 class="mb-8 text-2xl font-bold leading-snug tracking-tighter text-left text-indigo-900 lg:text-5xl title-font">Investment Platform for Everyone</h1>
              <div class="flex flex-wrap -mx-4 -mt-4 -mb-10 sm:-m-4 ">
                <div class="flex flex-col items-start p-4 mb-6 text-left md:w-1/2 md:mb-0">
                  <div class="inline-flex items-center justify-center flex-shrink-0 w-12 h-12 mb-5 text-black rounded-full bg-gray-50">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 icon icon-tabler icon-tabler-aperture" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                      <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                      <circle cx="12" cy="12" r="9"></circle>
                      <line x1="3.6" y1="15" x2="14.15" y2="15"></line>
                      <line x1="3.6" y1="15" x2="14.15" y2="15" transform="rotate(72 12 12)"></line>
                      <line x1="3.6" y1="15" x2="14.15" y2="15" transform="rotate(144 12 12)"></line>
                      <line x1="3.6" y1="15" x2="14.15" y2="15" transform="rotate(216 12 12)"></line>
                      <line x1="3.6" y1="15" x2="14.15" y2="15" transform="rotate(288 12 12)"></line>
                    </svg>
                  </div>
                  <div class="flex-grow">
                    <h2 class="mb-3 text-lg font-medium tracking-tighter text-gray-700 title-font hover:text-pink-700 cursor-pointer"><%= link_to 'Become an Investor', new_buyer_registration_path %></h2>
                    <p class="text-base leading-relaxed">Choose the BROKER you are comfortable with to buy shares and grow your money.</p>
                    <%= link_to new_buyer_session_path do %>
                    <div class="inline-flex items-center font-semibold text-blue-600 md:mb-2 lg:mb-0 hover:text-green-600 cursor-pointer" title="read more">Sign In as Investor <svg class="w-4 h-4 ml-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="20" height="20" fill="currentColor">
                        <path fill="none" d="M0 0h24v24H0z"></path>
                        <path d="M16.172 11l-5.364-5.364 1.414-1.414L20 12l-7.778 7.778-1.414-1.414L16.172 13H4v-2z"></path>
                      </svg>
                    </div>
                    <% end %>
                  </div>
                </div>
                <div class="flex flex-col items-start p-4 mb-6 text-left md:w-1/2 md:mb-0">
                  <div class="inline-flex items-center justify-center flex-shrink-0 w-12 h-12 mb-5 text-black rounded-full bg-gray-50">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 icon icon-tabler icon-tabler-aperture" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                      <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                      <circle cx="12" cy="12" r="9"></circle>
                      <line x1="3.6" y1="15" x2="14.15" y2="15"></line>
                      <line x1="3.6" y1="15" x2="14.15" y2="15" transform="rotate(72 12 12)"></line>
                      <line x1="3.6" y1="15" x2="14.15" y2="15" transform="rotate(144 12 12)"></line>
                      <line x1="3.6" y1="15" x2="14.15" y2="15" transform="rotate(216 12 12)"></line>
                      <line x1="3.6" y1="15" x2="14.15" y2="15" transform="rotate(288 12 12)"></line>
                    </svg>
                  </div>
                  <div class="flex-grow">
                    <h2 class="mb-3 text-lg font-medium tracking-tighter text-gray-700 title-font hover:text-pink-700 cursor-pointer"><%= link_to 'Become a Broker', new_broker_registration_path %></h2>
                    <p class="text-base leading-relaxed">You can be flexible in choosing as many stocks as you want to sell to our INVESTORS.</p>
                    <%= link_to new_broker_session_path do %>
                    <div class="inline-flex items-center font-semibold text-blue-600 md:mb-2 lg:mb-0 hover:text-green-600 cursor-pointer" title="read more">Sign In as Broker <svg class="w-4 h-4 ml-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="20" height="20" fill="currentColor">
                        <path fill="none" d="M0 0h24v24H0z"></path>
                          <path d="M16.172 11l-5.364-5.364 1.414-1.414L20 12l-7.778 7.778-1.414-1.414L16.172 13H4v-2z"></path>
                        </svg>
                    </div>
                    <% end %>
                  </div>
                </div>
              </div>
    </div>
    <div class="w-full lg:w-5/6 lg:max-w-lg md:w-1/2">
      <%= image_tag("stockmarket.jpg", class:"object-cover object-center rounded-lg") %>
    </div>
  </div>
</section>
      