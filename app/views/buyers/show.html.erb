<div class="container items-center px-5 py-12 lg:px-20">
  <div class="p-6 mx-auto bg-white border rounded-lg shadow-xl lg:w-1/2">
    <div class="flex flex-col items-start py-2 rounded-lg lg:flex-row">
      <div class="flex items-center justify-center w-full lg:justify-start lg:w-1/2">
        <%= image_tag("buyer.jpg", class:"rounded-lg") %>
      </div>
      <div class="flex flex-col w-full text-gray-500 lg:ml-4">
        <h2 class="mt-4 mb-8 text-xs font-semibold tracking-widest text-black uppercase lg:mt-0 title-font"><%= @buyer.email %></h2>
        <p class="mb-3 text-base leading-relaxed text-gray-500"> USERNAME: <%= @buyer.username %> </p>
        <div class="flex mt-4 py-2 text-lg font-bold">
          <%= link_to "Edit", edit_buyer_path(@buyer), class:"bg-yellow-500 p-2 mx-4 text-white rounded-lg" %>
          <%= link_to "Delete", buyer_path(@buyer),
                            method: :delete,
                            data: { confirm: "Are you sure?" },
                            class:"bg-red-500 p-2 mx-4 text-white rounded-lg" %>
        </div>
      </div>
    </div>
  </div>
</div>
