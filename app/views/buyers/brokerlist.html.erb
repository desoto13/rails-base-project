<h1>Available stock brokers</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Username</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    
    <% @brokers.each do |broker| %>
      <tr>
        <td><%= broker.id %></td>
        <td><%= broker.username %></td>
        <td><%= button_to "View stocks", broker_stocklist_path(broker), method: :get %>
      </tr>
    <% end %>
  </tbody>
</table>